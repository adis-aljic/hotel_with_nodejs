<body>

    <%- include ("./partials/nav.ejs") %>


        <div class="reg_forms">

            <div>

                <h1>Guest registration room</h1>
               

                <form action="./adminGuestRoom" method="post">
                    <h1>Choose type of room</h1>
                    <div>
                        <div id="radio_btn">
                            <input type="radio" id="type_of_room" name="type_of_room" value="Single Bed">
                            <label for="type_of_room">Single Bed</label>
                            <input type="radio" id="type_of_room" name="type_of_room" value="Twin Bed">
                            <label for="type_of_room">Twin Bed</label>
                            <input type="radio" id="type_of_room" name="type_of_room" value="Apartment">
                            <label for="type_of_room"> Apartment</label>

                        </div>


                    </div>

                    <h1>Choose room number</h1>
                    <h2>Single bed</h2>
                    <input type="radio" id="room_number" name="room_number" value="101">
                    <label for="type_of_room">Room 101</label>
                    <input type="radio" id="room_number" value="102" name="room_number">
                    <label for="type_of_room">Room 102</label>
                    <h2>Twin bed</h2>
                    <input type="radio" id="room_number" value="201" name="room_number">
                    <label for="type_of_room">Room 201</label>
                    <input type="radio" id="room_number" value="202" name="room_number">
                    <label for="type_of_room">Room 202</label>
                    <h2>Apartment</h2>
                    <input type="radio" id="room_number" value="301" name="room_number">
                    <label for="type_of_room">Room 301</label>
                    <input type="radio" id="room_number" value="302" name="room_number">
                    <label for="type_of_room">Room 302</label>
                    <h1>Room status</h1>
                    <input type="radio" id="room_status" value="Avaiable" name="room_status">
                    <label for="room_status">Avaiable</label>
                    <input type="radio" id="room_status" value="Ocupated" name="room_status">
                    <label for="room_status">Ocupated</label>
                    <br>
                    <button class="sub_butt" type="submit" onClick="window.open('/adminGuestBooking')"">Submit</button>

                </form>
          

             
                <br>







        </div>

